generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id         Int      @id @default(autoincrement())
  Year       Int
  Title      String   @unique
  handle     String
  Publisher  String
  ISBN       String   @unique
  Pages      Int
  Notes      String[]
  created_at DateTime @default(now())

}

model Short {
  id                      Int      @id @default(autoincrement())
  title                   String   @unique
  type                    String
  handle                  String
  originallyPublishedIn String
  collectedIn            String
  notes                   String[]
  year                    Int
  created_at              DateTime @default(now())
}
