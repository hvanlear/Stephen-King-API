generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id         Int       @default(autoincrement())
  Year       Int
  Title      String    @unique
  handle     String @id
  Publisher  String
  ISBN       String    @unique
  Pages      Int
  Notes      String[]
  villians   Villain[]
  created_at DateTime  @default(now())
}

model Short {
  id                    Int      @id @default(autoincrement())
  title                 String   @unique
  type                  String
  handle                String
  originallyPublishedIn String
  collectedIn           String
  notes                 String[]
  year                  Int
  created_at            DateTime @default(now())
}

model Villain {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  gender     String?
  status     String
  types_id   Int
  appears_in String[]
  books      Book[]
  created_at DateTime @default(now())
}

model Place {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Type {
  id   Int    @id @default(autoincrement())
  type String @unique
}
