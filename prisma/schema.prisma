generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id         Int       @id @default(autoincrement())
  Year       Int
  Title      String    @unique
  handle     String    
  Publisher  String
  ISBN       String    @unique
  Pages      Int
  Notes      String[]
  villians   bookVillains[]
  created_at DateTime  @default(now())
}

model Short {
  id                    Int      @id @default(autoincrement())
  title                 String   @unique
  type                  String
  handle                String
  originallyPublishedIn String
  collectedIn           String
  notes                 String[]
  year                  Int
  villains              shortVillains[]
  created_at            DateTime @default(now())
}

model Villain {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  gender     String?
  status     String
  types_id   Int
  appears_in String[]
  notes      String[]
  books      bookVillains[]
  shorts     shortVillains[]
  created_at DateTime @default(now())
}

model bookVillains {
  book Book @relation(fields: [bookId], references: [id])
  bookId Int @map("book_id")
  villain Villain @relation(fields: [villainId], references: [id])
  villainId Int @map("villain_id")

  @@id([bookId, villainId])
}

model shortVillains {
  short Short @relation(fields: [shortId], references: [id])
  shortId Int @map("short_id")
  villain Villain @relation(fields: [villainId], references: [id])
  villainId Int @map("villain_id")

  @@id([shortId, villainId])
}



model Place {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Type {
  id   Int    @id @default(autoincrement())
  type String @unique
}
